# =====================================================
# 网络安全棋谱对抗系统 - 前端环境变量配置
# CHAT CHESS Platform - Frontend Environment Variables
# =====================================================

# 基础配置
# =====================================================
# 应用运行端口（开发环境）
VITE_PORT=5173

# 应用名称
VITE_APP_NAME="CHAT CHESS Platform"

# 应用版本
VITE_APP_VERSION="1.0.0"

# 运行环境: development | staging | production
VITE_NODE_ENV=developmen

# API配置
# =====================================================
# 后端API基础URL
VITE_API_URL=http://localhost:3000

VITE_API_BASE_URL=http://localhost:3000/api

# API版本
VITE_API_VERSION=v1

# API超时时间（毫秒）
VITE_API_TIMEOUT=30000

# WebSocket配置
# =====================================================
# WebSocket服务器URL
VITE_SOCKET_URL=ws://localhost:3000

# WebSocket重连次数
VITE_SOCKET_RECONNECT_ATTEMPTS=5

# WebSocket重连延迟（毫秒）
VITE_SOCKET_RECONNECT_DELAY=3000

# 存储配置
# =====================================================
# 静态资源URL（CDN或本地）
VITE_STATIC_URL=http://localhost:3000/static

# 上传文件大小限制（MB）
VITE_MAX_UPLOAD_SIZE=10

# 支持的文件类型
VITE_ALLOWED_FILE_TYPES=".json,.pgn,.jpg,.jpeg,.png,.gif,.pdf"

# 安全配置
# =====================================================
# 是否启用HTTPS
VITE_ENABLE_HTTPS=false

# CSP（内容安全策略）配置
VITE_CSP_ENABLED=false

# 加密密钥（前端加密用，注意：不要存储敏感密钥）
VITE_ENCRYPTION_KEY=your-frontend-encryption-key

# 功能开关
# =====================================================
# 是否启用调试模式
VITE_DEBUG_MODE=true

# 是否启用性能监控
VITE_ENABLE_ANALYTICS=false

# 是否启用错误上报
VITE_ENABLE_ERROR_REPORTING=false

# 是否启用Service Worker
VITE_ENABLE_SERVICE_WORKER=false

# 是否启用PWA功能
VITE_ENABLE_PWA=false

# 第三方服务配置
# =====================================================
# Google Analytics ID（可选）
VITE_GA_TRACKING_ID=

# Sentry DSN（错误追踪，可选）
VITE_SENTRY_DSN=

# 地图服务密钥（如需要，可选）
VITE_MAP_API_KEY=

# 游戏配置
# =====================================================
# 游戏回合时间限制（秒）
VITE_GAME_TURN_TIME=120

# 最大游戏回合数
VITE_GAME_MAX_ROUNDS=50

# AI难度等级: easy | normal | hard | expert
VITE_GAME_DEFAULT_AI_LEVEL=normal

# 是否启用游戏音效
VITE_GAME_ENABLE_SOUND=true

# 是否启用游戏动画
VITE_GAME_ENABLE_ANIMATION=true

# UI配置
# =====================================================
# 默认主题: dark | light | auto
VITE_DEFAULT_THEME=dark

# 默认语言: zh-CN | en-US
VITE_DEFAULT_LANGUAGE=zh-CN

# 分页默认大小
VITE_DEFAULT_PAGE_SIZE=20

# 表格最大显示行数
VITE_MAX_TABLE_ROWS=100

# 开发工具配置
# =====================================================
# 是否显示React Query Devtools
VITE_SHOW_REACT_QUERY_DEVTOOLS=true

# 是否显示Redux Devtools
VITE_SHOW_REDUX_DEVTOOLS=true

# 是否启用Mock数据
VITE_ENABLE_MOCK=false

# Mock API延迟（毫秒）
VITE_MOCK_API_DELAY=500

# 部署配置
# =====================================================
# 公共路径（用于子目录部署）
VITE_PUBLIC_PATH=/

# 构建输出目录
VITE_BUILD_OUTPUT_DIR=dist

# 是否生成Source Map
VITE_GENERATE_SOURCEMAP=false

# 日志配置
# =====================================================
# 日志级别: debug | info | warn | error | none
VITE_LOG_LEVEL=debug

# 是否在控制台显示日志
VITE_CONSOLE_LOG_ENABLED=true

# 是否保存日志到LocalStorage
VITE_PERSIST_LOGS=false

# =====================================================
# 注意事项：
# 1. 所有环境变量必须以 VITE_ 开头才能在客户端代码中访问
# 2. 不要在前端环境变量中存储敏感信息（如数据库密码、私密API密钥等）
# 3. 生产环境部署时，请创建 .env.production 文件并配置生产环境的值
# 4. 开发环境使用 .env.development 文件
# 5. 本地测试可以创建 .env.local 文件（会被git忽略）
# =====================================================